@page "/"

@inject IPresentRepository presentRepository

<h1>Today is @DateTime.Today.ToLongDateString()</h1>

<div class="presents">
    <ul>
        @foreach (var present in presents)
        {
            <li><NavLink href="@($"/present/{present.Id}")">@present.Id</NavLink></li>
        }
    </ul>
</div>

@code {
    private IEnumerable<Present> presents;

    protected override void OnInitialized()
    {
        presents = presentRepository.GetPresents();
    }
}