@page "/present/{id:int}"

@inject IPresentRepository presentRepository;

<PresentComponent present="present"></PresentComponent>

@code {
    private Present present;
    private Resource resource;

    [Parameter]
    public int id { get; set; }

    protected override void OnParametersSet()
    {
        if (id > 25)
            id = 25;

        present = presentRepository.GetPresent(id);
        present.Url = presentRepository.GetResource();
    }
}
